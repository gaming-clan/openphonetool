<UserControl x:Class="OpenPhoneTool.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="16">
        <TextBlock Text="Application Settings" FontWeight="Bold" FontSize="20"/>
        <Separator Margin="0,10"/>
        <TextBlock Text="Theme" Margin="0,6"/>
        <ComboBox Width="200">
            <ComboBoxItem Content="Light"/>
            <ComboBoxItem Content="Dark"/>
        </ComboBox>
        <TextBlock Text="Language" Margin="0,16,0,6"/>
        <ComboBox Width="200">
            <ComboBoxItem Content="English"/>
            <ComboBoxItem Content="EspaÃ±ol"/>
        </ComboBox>
        <TextBlock Text="Backup Directory" Margin="0,16,0,6"/>
        <TextBox Width="280"/>
        <Button Content="Select Directory" Width="200" Margin="0,6"/>
        <TextBlock Text="Logging Level" Margin="0,16,0,6"/>
        <ComboBox Width="200">
            <ComboBoxItem Content="Info"/>
            <ComboBoxItem Content="Warning"/>
            <ComboBoxItem Content="Error"/>
            <ComboBoxItem Content="Debug"/>
        </ComboBox>
    </StackPanel>
</UserControl>